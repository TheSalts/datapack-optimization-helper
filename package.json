{
  "name": "datapack-optimization",
  "displayName": "Datapack Optimization Helper",
  "description": "An extension for datapack(mcfunction) optimization",
  "version": "1.0.25",
  "publisher": "TheSalt",
  "repository": "https://github.com/TheSalts/datapack-optimization-helper",
  "icon": "image/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/*.mcfunction"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mcfunction",
        "aliases": [
          "MCFunction",
          "mcfunction"
        ],
        "extensions": [
          ".mcfunction"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Datapack Optimization Helper",
      "properties": {
        "datapackOptimization.rules.disabled": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "always-pass-condition",
              "execute-as-if-entity-s-convert",
              "execute-as-if-entity-s-merge",
              "execute-as-s-redundant",
              "execute-duplicate",
              "execute-group",
              "execute-run-redundant",
              "execute-run-redundant-run-execute",
              "execute-unnecessary",
              "nbt-items-use-if-items",
              "return-run-duplicate",
              "scoreboard-fake-player-missing-hash",
              "target-selector-no-dimension",
              "target-selector-no-type",
              "target-selector-type-order",
              "unreachable-code",
              "unreachable-condition"
            ],
            "enumItemLabels": [
              "%config.rules.disabled.alwaysPassCondition.label%",
              "%config.rules.disabled.executeAsIfEntitySConvert.label%",
              "%config.rules.disabled.executeAsIfEntitySMerge.label%",
              "%config.rules.disabled.executeAsSRedundant.label%",
              "%config.rules.disabled.executeDuplicate.label%",
              "%config.rules.disabled.executeGroup.label%",
              "%config.rules.disabled.executeRunRedundant.label%",
              "%config.rules.disabled.executeRunRedundantRunExecute.label%",
              "%config.rules.disabled.executeUnnecessary.label%",
              "%config.rules.disabled.nbtItemsUseIfItems.label%",
              "%config.rules.disabled.returnRunDuplicate.label%",
              "%config.rules.disabled.scoreboardFakePlayerMissingHash.label%",
              "%config.rules.disabled.targetSelectorNoDimension.label%",
              "%config.rules.disabled.targetSelectorNoType.label%",
              "%config.rules.disabled.targetSelectorTypeOrder.label%",
              "%config.rules.disabled.unreachableCode.label%",
              "%config.rules.disabled.unreachableCondition.label%"
            ],
            "markdownEnumDescriptions": [
              "%config.rules.disabled.alwaysPassCondition.description%",
              "%config.rules.disabled.executeAsIfEntitySConvert.description%",
              "%config.rules.disabled.executeAsIfEntitySMerge.description%",
              "%config.rules.disabled.executeAsSRedundant.description%",
              "%config.rules.disabled.executeDuplicate.description%",
              "%config.rules.disabled.executeGroup.description%",
              "%config.rules.disabled.executeRunRedundant.description%",
              "%config.rules.disabled.executeRunRedundantRunExecute.description%",
              "%config.rules.disabled.executeUnnecessary.description%",
              "%config.rules.disabled.nbtItemsUseIfItems.description%",
              "%config.rules.disabled.returnRunDuplicate.description%",
              "%config.rules.disabled.scoreboardFakePlayerMissingHash.description%",
              "%config.rules.disabled.targetSelectorNoDimension.description%",
              "%config.rules.disabled.targetSelectorNoType.description%",
              "%config.rules.disabled.targetSelectorTypeOrder.description%",
              "%config.rules.disabled.unreachableCode.description%",
              "%config.rules.disabled.unreachableCondition.description%"
            ]
          },
          "default": [
            "scoreboard-fake-player-missing-hash"
          ],
          "description": "%config.rules.disabled.description%",
          "uniqueItems": true
        },
        "datapackOptimization.executeGroup.outputPath": {
          "type": "string",
          "default": "{dir}",
          "pattern": "^(\\{dir\\}|\\{root\\}|[a-zA-Z]:|\\.)([/\\\\]?[a-zA-Z0-9_\\-{}. ]+)*$",
          "patternErrorMessage": "Path must be a valid directory path or use placeholders: {dir}, {root}, {subdir}",
          "markdownDescription": "%config.executeGroup.outputPath.markdownDescription%"
        },
        "datapackOptimization.executeGroup.outputName": {
          "type": "string",
          "default": "{name}_line_{line}",
          "pattern": "^[a-zA-Z0-9_\\-{}]+$",
          "patternErrorMessage": "Filename must contain only alphanumeric characters, underscores, hyphens, and placeholders: {name}, {line}",
          "markdownDescription": "%config.executeGroup.outputName.markdownDescription%"
        },
        "datapackOptimization.rename.behavior": {
          "type": "string",
          "enum": [
            "ask",
            "codeOnly",
            "includeComments",
            "skip"
          ],
          "enumItemLabels": [
            "%config.rename.behavior.ask.label%",
            "%config.rename.behavior.codeOnly.label%",
            "%config.rename.behavior.includeComments.label%",
            "%config.rename.behavior.skip.label%"
          ],
          "default": "ask",
          "markdownDescription": "%config.rename.behavior.markdownDescription%"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "datapack.config.json",
        "url": "./schemas/datapack.config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "pack": "node -e \"require('fs').mkdirSync('./release', { recursive: true })\" && vsce pack -o ./release/",
    "pub": "npm run publish",
    "publish": "vsce publish patch && ovsx publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
